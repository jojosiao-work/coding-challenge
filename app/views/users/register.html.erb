<div class="headline">Register</div>
 
<%= form_with(url: "/users/register", model: @user) do |f| %>

    <% if @user.errors.any? %>
      <ul>
        <% @user.errors.each do |error| %>
            <li><%= error.full_message %></li>
        <% end %>
      </ul>
    <% end %>
  
  
    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
  
    <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password  %>
    </div>
    
    <%= f.submit "Register" %>
  
    <div>
      <%= link_to  "Login" ,"/users/login" %>
    </div>
    <% end %>
  
  